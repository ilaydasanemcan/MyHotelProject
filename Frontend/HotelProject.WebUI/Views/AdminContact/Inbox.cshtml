@model List<ResultContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div class="email-left-box">
    <a href="/AdminContact/CreateMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

    @await Html.PartialAsync("SideBarAdminContactPartial")

    <h5 class="mt-5 m-b-10">Kategoriler</h5>

    @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="email-list m-t-15">
        <div>
            <div class="btn-group">
                <button aria-expanded="false" class="btn btn-dark" type="button">
                    Gelen Mesajlar
                </button>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="message">
                <a href="/AdminContact/InboxMessageDetail/@item.ContactId">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        @if (item.Message.Length >= 30)
                        {
                            <div class="subject"><b>@item.Subject</b> @item.Message.Substring(0,30)</div>
                        }
                        else
                        {
                            <div class="subject"><b>@item.Subject</b> @item.Message</div>
                        }
                        <div class="date">@item.Date.ToString("dd/mm/yyyy")</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
