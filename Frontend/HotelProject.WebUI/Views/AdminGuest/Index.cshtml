@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir Adı</th>
        <th>Misafir Soyadı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GuestId</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="/AdminGuest/DeleteGuest/@item.GuestId" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/AdminGuest/UpdateGuest/@item.GuestId" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminGuest/AddGuest" class="btn mb-1 btn-rounded btn-info">Yeni Misafir Girişi</a>

