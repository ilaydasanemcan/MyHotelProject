@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}



<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Şehir Id Bilgisini Giriniz</label>
        <input type="text" class="form-control" name="cityID">
        <br />
        <button class="btn btn-primary">Şehir İçin Otelleri Listele</button>
    }
    
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanlar</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <th>@item.name</th>
                <th>@item.reviewScore</th>
                <th><a href="#" class="btn btn-outline-dark">Detaylar</a></th>
            </tr>
        }
    </table>
</div>
